<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
  <display-name>OJ</display-name>
  <filter>
    <filter-name>nutz</filter-name>
    <filter-class>org.nutz.mvc.NutFilter</filter-class>
    <init-param>
      <param-name>modules</param-name>
      <param-value>cn.likole.oj.MainModule</param-value>
    </init-param>
    <init-param>
      <param-name>ignore</param-name>
      <param-value>^(.+[.])(jsp|png|gif|jpg|js|css|jspx|jpeg|swf|ico|map|html)$</param-value>
    </init-param>
    <!--<init-param>-->
      <!--<param-name>exclusions</param-name>-->
      <!--&lt;!&ndash; *.XXX 忽略后缀 &ndash;&gt;-->
      <!--&lt;!&ndash; /XX/* 忽略前缀 &ndash;&gt;-->
      <!--&lt;!&ndash; /cc   忽略固定路径 &ndash;&gt;-->
      <!--&lt;!&ndash; 下面的例子忽略了html和ftl后缀, 忽略了/rs/和/druid/前缀,和忽略了固定路径/abc/notaction &ndash;&gt;-->
      <!--<param-value>*.html,*.ftl,/rs/*,/druid/*,/abc/notaction</param-value>-->
    <!--</init-param>-->
  </filter>

  <filter-mapping>
    <filter-name>nutz</filter-name>
    <url-pattern>/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
    <dispatcher>FORWARD</dispatcher>
  </filter-mapping>
</web-app>